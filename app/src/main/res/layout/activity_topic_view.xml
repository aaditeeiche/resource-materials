    <TextView
        android:id="@+id/textView"
        android:layout_width="374dp"
        android:layout_height="507dp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:background="#C3B4DE"
        android:fontFamily="@font/baloo_tamma"
        android:gravity="center_vertical"
        android:justificationMode="inter_word"
        android:padding="20dp"
        android:text="Text about the topic"
        android:textColor="#2B0E60"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/viewRefVid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <Button
        android:id="@+id/viewRefVid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:width="270dp"
        android:background="@drawable/rounded_button_background"
        android:fontFamily="@font/baloo_tamma"
        android:text="View Reference Video"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewRefVid"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:width="270dp"
        android:background="@drawable/rounded_button_background"
        android:fontFamily="@font/baloo_tamma"
        android:text="View PDF"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewRefVid"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
